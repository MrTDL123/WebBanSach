@model ProductVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradien m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">@(Model.Product.Id!=0?"Cập nhập":"Tạo") sản phẩm</h2>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row" enctype="multipart/form-data">
                <input asp-for="Product.Id" hidden />
                <input asp-for="Product.ImageUrl" hidden/>
                <div class="row">
                    <div class="col-10">
                        <div class="border p-3">
                            <div class="mb-3 row">
                                <label asp-for="Product.Title" class="p-1"></label>
                                <input asp-for="Product.Title" class="form-control" />
                                <span asp-validation-for="Product.Title" class="text-danger"></span>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Product.Description" class="p-1"></label>
                                <textarea asp-for="Product.Description" class="form-control"></textarea>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Product.Author" class="p-1"></label>
                                <input asp-for="Product.Author" class="form-control" />
                                <span asp-validation-for="Product.Author" class="text-danger"></span>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Product.ISBN" class="p-1"></label>
                                <input asp-for="Product.ISBN" class="form-control" />
                                <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                            </div>

                            <div class="mb-3 row">
                                <label asp-for="Product.ListPrice" class="p-1"></label>
                                <input asp-for="Product.ListPrice" class="form-control" />
                                <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Product.Price" class="p-1"></label>
                                <input asp-for="Product.Price" class="form-control" />
                                <span asp-validation-for="Product.Price" class="text-danger"></span>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Product.Price50" class="p-1"></label>
                                <input asp-for="Product.Price50" class="form-control" />
                                <span asp-validation-for="Product.Price50" class="text-danger"></span>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Product.Price100" class="p-1"></label>
                                <input asp-for="Product.Price100" class="form-control" />
                                <span asp-validation-for="Product.Price100" class="text-danger"></span>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Product.CategoryId" class="p-1"></label>
                                <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                                    <option disabled selected>--Select Category--</option>
                                </select>
                                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Product.ImageUrl" class="p-1"></label>
                                <input type="file" name="file" class="form-control" /> @*Khi mà input là dạng file thì cần phải thêm tag namde của file đấy*@
                            </div>
                            <div class="row">
                                <div class="col-6 col-md-3">
                                    @if (Model.Product.Id != 0)
                                    {
                                        <button type="submit" class="btn form-control btn-primary">Cập nhập</button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn form-control btn-primary">Tạo</button>
                                    }

                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                                        Quay về
                                    </a>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="col-2">
                        <img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px ; border: 1px solid #bbb9b9">
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image lists table visualblocks wordcount ',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}