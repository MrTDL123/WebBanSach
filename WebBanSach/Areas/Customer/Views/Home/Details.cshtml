            <!-- Ô THÔNG TIN CHI TIẾT -->
            <div class="info-card">
                <label class="section-title">📋 Thông tin chi tiết</label>
                <table class="info-table" style="width:100%;">
                    <tr>
                        <td>Mã hàng</td>
                        <td>3300000055619</td>
                    </tr>
                    <tr>
                        <td>Tác giả</td>
                        <td>Đặng Vương Hưng</td>
                    </tr>
                    <tr>
                        <td>NXB</td>
