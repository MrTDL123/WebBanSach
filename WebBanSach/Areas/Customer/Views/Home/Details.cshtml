            border-radius: 8px;
            border: 1px solid #e5e5e5;
            margin-bottom: 15px;
        }

        .thumbnail-list {
            display: flex;
            gap: 10px;
            justify-content: center;
        }

        .thumbnail {
            width: 70px;
            height: 90px;
            border: 2px solid #e5e5e5;
            border-radius: 4px;
            cursor: pointer;
            object-fit: cover;
            transition: all 0.2s;
        }

        .thumbnail.active,
        .thumbnail:hover {
            border-color: #C92127;
        }

        .action-buttons {
            display: flex;
            flex-direction: row;
            gap: 12px;
            margin: 20px 0;
        }

        .btn {
            width: 100%;
            padding: 0 20px;
            border-radius: 8px;
            text-transform: none;
            font-size: 15px;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
            height: 44px;
            white-space: nowrap;
        }

        .btn-primary {
            background: #C92127;
            color: white;
        }

        .btn-primary:hover {
            background: white;
            color: #C92127; 
            box-shadow: 0 4px 8px rgba(201, 33, 39, 0.3);
            border: 2px solid #C92127;
        }

        .btn-outline {
            background: white;
            color: #C92127;
            border: 2px solid #C92127;
        }

        .btn-outline:hover {
            background: #C92127;
            color: white;
            border: 2px solid #C92127;
        }

        .btn-outline span {
            padding-left: 5px;
        }

        .policy-title {
            font-weight: 600;
            margin-bottom: 15px;
            color: #0d3b66;
            font-size: 15px;
        }

        .policy-item {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-bottom: 12px;
            font-size: 13px;
            line-height: 1.5;
            cursor: pointer;
        }

        .policy-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .montserrat-bold {
