<style>
    .review-popup {
        background: white;
        border-radius: 8px;
        width: 100%;
        padding: 0 20px 20px 20px;
        overflow: visible !important;
        display: flex;
        flex-direction: column;
    }

    .popup-header {
        display: flex;
        flex-direction: column;
        border: none;
    }

    .popup-title {
        font-size: 18px;
        font-weight: 600;
        color: #333;
        margin-bottom: 16px;
        text-transform: uppercase;
    }

    .star {
        font-size: 36px;
        cursor: pointer;
        color: #ddd;
        transition: all 0.2s;
    }

    .star.active,
    .star:hover {
        color: #ffc107;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .input-field {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        font-size: 14px;
        transition: border-color 0.2s;
        margin-bottom: 20px;
    }

    .input-field:focus {
        outline: none;
        border-color: #4CAF50;
    }

    .input-field::placeholder {
        color: #999;
    }

    textarea.input-field {
        min-height: 120px;
        resize: vertical;
        font-family: inherit;
    }

    .emoji-container {
        display: flex;
        gap: 12px;
        margin-top: 12px;
    }

    .emoji-btn {
        width: 40px;
        height: 40px;
        border: 1px solid #e0e0e0;
        border-radius: 50%;
        background: white;
        font-size: 20px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .emoji-btn:hover {
        transform: scale(1.1);
        border-color: #4CAF50;
    }

    .toggle-container {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-top: 16px;
    }

    .toggle-label {
        font-size: 14px;
        color: #666;
        margin-right: 12px;
    }

    .toggle-switch {
        position: relative;
        width: 48px;
        height: 24px;
        background-color: #ccc;
        border-radius: 12px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .toggle-switch.active {
        background-color: #4CAF50;
    }

    .toggle-slider {
        position: absolute;
        top: 2px;
        left: 2px;
        width: 20px;
        height: 20px;
        background-color: white;
        border-radius: 50%;
        transition: transform 0.3s;
    }

    .toggle-switch.active .toggle-slider {
        transform: translateX(24px);
    }

    .emoji-toggle-container {
        display: flex;
        justify-content: space-between;
    }

    .popup-footer {
        display: flex;
        gap: 20px;
    }

    .btn {
        padding: 12px 32px;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-cancel {
        background: white;
        color: #666;
        border: 1px solid #e0e0e0;
    }

    .btn-cancel:hover {
        background: #f5f5f5;
    }

    .btn-submit {
        background: #dc3545;
        color: white;
        padding: 12px 48px;
    }

    .btn-submit:hover {
        background: #c82333;
    }

    .btn-submit:active {
        transform: scale(0.98);
    }
</style>
<div class="review-popup">
    <div class="popup-header">
        <h2 class="popup-title">Viết Đánh Giá Sản Phẩm</h2>
        <div class="stars-container" id="starsContainer">
            <span class="star" data-rating="1">★</span>
            <span class="star" data-rating="2">★</span>
            <span class="star" data-rating="3">★</span>
            <span class="star" data-rating="4">★</span>
            <span class="star" data-rating="5">★</span>
        </div>
    </div>

    <div class="form-group">
        <input type="text" class="input-field" placeholder="Nhập tên để hiển thị khi đánh giá" id="nameInput">
        <textarea class="input-field" placeholder="Nhập nhận xét của bạn về sản phẩm" id="reviewInput" style="margin:0;"></textarea>
        <div class="emoji-toggle-container">
            <div class="emoji-container">
                <button class="emoji-btn" onclick="insertEmoji('😊')">😊</button>
                <button class="emoji-btn" onclick="insertEmoji('😍')">😍</button>
            </div>
            <div class="toggle-container">
                <span class="toggle-label">Đánh giá ẩn danh</span>
                <div class="toggle-switch" id="anonymousToggle" onclick="toggleAnonymous()">
                    <div class="toggle-slider"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="popup-footer">
        <button class="btn btn-cancel" onclick="closePopupReview()">Hủy</button>
        <button class="btn btn-submit" onclick="submitReview()">Gửi nhận xét</button>
    </div>
</div>