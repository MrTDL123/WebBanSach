@model dynamic
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <!-- Header Section -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div class="space-y-2">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                Quản Lý Người Dùng
            </h1>
            <p class="text-gray-600 dark:text-gray-400 text-lg">Quản lý thông tin khách hàng và nhân viên trong hệ thống</p>
        </div>
        <div class="flex gap-3">
            <a href="@Url.Action("ThemNhanVien")"
               class="group inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white font-semibold rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-105 transform">
                <i class='bx bx-user-plus mr-2 group-hover:scale-110 transition-transform'></i>
                Thêm nhân viên
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Total Customers -->
        <div class="group bg-gradient-to-br from-white to-blue-50 dark:from-gray-800 dark:to-blue-900/20 rounded-2xl shadow-lg border border-blue-100/50 dark:border-blue-800/30 p-6 hover:shadow-xl transition-all duration-300 hover:scale-105 transform cursor-pointer">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide">Tổng khách hàng</p>
                    <p class="text-3xl font-bold text-gray-900 dark:text-white mt-2">@ViewBag.KhachHangs.Count</p>
                    <div class="flex items-center mt-2">
                        <i class='bx bx-user text-blue-500 mr-2'></i>
                        <span class="text-sm text-blue-600 dark:text-blue-400 font-medium">Khách hàng</span>
                    </div>
                </div>
                <div class="p-3 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl group-hover:scale-110 transition-transform duration-300">
                    <i class='bx bx-user text-2xl text-white'></i>
                </div>
            </div>
        </div>

        <!-- Total Staff -->
        <div class="group bg-gradient-to-br from-white to-amber-50 dark:from-gray-800 dark:to-amber-900/20 rounded-2xl shadow-lg border border-amber-100/50 dark:border-amber-800/30 p-6 hover:shadow-xl transition-all duration-300 hover:scale-105 transform cursor-pointer">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide">Tổng nhân viên</p>
                    <p class="text-3xl font-bold text-gray-900 dark:text-white mt-2">@ViewBag.NhanViens.Count</p>
                    <div class="flex items-center mt-2">
                        <i class='bx bx-user-check text-amber-500 mr-2'></i>
                        <span class="text-sm text-amber-600 dark:text-amber-400 font-medium">Nhân viên</span>
                    </div>
                </div>
                <div class="p-3 bg-gradient-to-br from-amber-500 to-amber-600 rounded-xl group-hover:scale-110 transition-transform duration-300">
                    <i class='bx bx-user-check text-2xl text-white'></i>
                </div>
            </div>
        </div>

        <!-- New Customers -->
        <div class="group bg-gradient-to-br from-white to-green-50 dark:from-gray-800 dark:to-green-900/20 rounded-2xl shadow-lg border border-green-100/50 dark:border-green-800/30 p-6 hover:shadow-xl transition-all duration-300 hover:scale-105 transform cursor-pointer">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide">Khách hàng mới</p>
                    <p class="text-3xl font-bold text-gray-900 dark:text-white mt-2">12</p>
                    <div class="flex items-center mt-2">
                        <i class='bx bx-user-plus text-green-500 mr-2'></i>
                        <span class="text-sm text-green-600 dark:text-green-400 font-medium">Tháng này</span>
                    </div>
                </div>
                <div class="p-3 bg-gradient-to-br from-green-500 to-green-600 rounded-xl group-hover:scale-110 transition-transform duration-300">
                    <i class='bx bx-user-plus text-2xl text-white'></i>
                </div>
            </div>
        </div>

        <!-- New Staff -->
        <div class="group bg-gradient-to-br from-white to-purple-50 dark:from-gray-800 dark:to-purple-900/20 rounded-2xl shadow-lg border border-purple-100/50 dark:border-purple-800/30 p-6 hover:shadow-xl transition-all duration-300 hover:scale-105 transform cursor-pointer">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide">Nhân viên mới</p>
                    <p class="text-3xl font-bold text-gray-900 dark:text-white mt-2">3</p>
                    <div class="flex items-center mt-2">
                        <i class='bx bx-user-circle text-purple-500 mr-2'></i>
                        <span class="text-sm text-purple-600 dark:text-purple-400 font-medium">Tháng này</span>
                    </div>
                </div>
                <div class="p-3 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl group-hover:scale-110 transition-transform duration-300">
                    <i class='bx bx-user-circle text-2xl text-white'></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="p-4 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-2xl shadow-lg animate-fade-in">
            <div class="flex items-center gap-3">
                <i class='bx bx-check-circle text-xl'></i>
                <div class="flex-1">
                    <strong>Thành công!</strong> @TempData["Success"]
                </div>
                <button type="button" onclick="this.parentElement.parentElement.remove()" class="text-white/80 hover:text-white">
                    <i class='bx bx-x text-xl'></i>
                </button>
            </div>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="p-4 bg-gradient-to-r from-red-500 to-rose-600 text-white rounded-2xl shadow-lg animate-fade-in">
            <div class="flex items-center gap-3">
                <i class='bx bx-error text-xl'></i>
                <div class="flex-1">
                    <strong>Lỗi!</strong> @TempData["Error"]
                </div>
                <button type="button" onclick="this.parentElement.parentElement.remove()" class="text-white/80 hover:text-white">
                    <i class='bx bx-x text-xl'></i>
                </button>
            </div>
        </div>
    }

    <!-- Main Content Card -->
    <div class="bg-gradient-to-br from-white to-blue-50 dark:from-gray-800 dark:to-blue-900/20 rounded-2xl shadow-2xl border border-blue-100/50 dark:border-blue-800/30 overflow-hidden">
        <!-- Card Header -->
        <div class="px-6 py-4 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                <div class="flex items-center gap-3">
                    <div class="p-2 bg-white/20 rounded-xl backdrop-blur-sm border border-white/30">
                        <i class='bx bx-list-ul text-xl text-white'></i>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-white">Danh Sách Người Dùng</h2>
                        <p class="text-blue-100 text-sm">Quản lý khách hàng và nhân viên trong hệ thống</p>
                    </div>
                </div>
                <div class="mt-3 lg:mt-0">
                    <div class="relative">
                        <i class='bx bx-search absolute left-3 top-1/2 transform -translate-y-1/2 text-blue-100'></i>
                        <input type="text" id="userSearch"
                               class="pl-10 pr-4 py-2 bg-white/10 backdrop-blur-sm border-2 border-white/20 rounded-xl text-white placeholder-blue-100 focus:border-white/40 focus:ring-4 focus:ring-white/20 transition-all duration-300"
                               placeholder="Tìm kiếm người dùng...">
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab Navigation -->
        <div class="flex border-b border-gray-200 dark:border-gray-700">
            <button id="customer-tab" class="flex-1 py-4 text-center font-semibold border-b-2 border-blue-500 text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 transition-all duration-300 tab-button active" data-tab="customer">
                <div class="flex items-center justify-center gap-2">
                    <i class='bx bx-user'></i>
                    <span>Khách hàng</span>
                    <span class="bg-blue-500 text-white px-2 py-1 rounded-full text-xs">@ViewBag.KhachHangs.Count</span>
                </div>
            </button>
            <button id="staff-tab" class="flex-1 py-4 text-center font-semibold text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-all duration-300 tab-button" data-tab="staff">
                <div class="flex items-center justify-center gap-2">
                    <i class='bx bx-user-check'></i>
                    <span>Nhân viên</span>
                    <span class="bg-amber-500 text-white px-2 py-1 rounded-full text-xs">@ViewBag.NhanViens.Count</span>
                </div>
            </button>
        </div>

        <!-- Tab Content -->
        <div class="p-6">
            <!-- Customer Tab Content -->
            <div id="customer-content" class="tab-content active space-y-4">
                <div class="p-4 bg-gradient-to-r from-blue-500/10 to-purple-500/10 dark:from-blue-500/20 dark:to-purple-500/20 rounded-xl border border-blue-200/50 dark:border-blue-700/30">
                    <div class="flex items-center gap-3">
                        <i class='bx bx-info-circle text-blue-500 text-lg'></i>
                        <div>
                            <strong class="text-gray-900 dark:text-white">Thông báo:</strong>
                            <span class="text-gray-600 dark:text-gray-400">
                                Chức năng thêm/sửa khách hàng đã bị vô hiệu hóa. Chỉ có thể xem thông tin và xóa khách hàng (nếu không có dữ liệu liên quan).
                            </span>
                        </div>
                    </div>
                </div>

                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gradient-to-r from-gray-50 to-blue-50 dark:from-gray-800 dark:to-blue-900/20 border-b-2 border-gray-200/50 dark:border-gray-700/50">
                                <tr>
                                    <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Mã KH</th>
                                    <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Họ tên</th>
                                    <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Số điện thoại</th>
                                    <th class="px-6 py-4 text-center text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="customerTableBody" class="divide-y divide-gray-200/30 dark:divide-gray-700/30">
                                @foreach (var kh in ViewBag.KhachHangs)
                                {
                                    <tr class="group hover:bg-gradient-to-r hover:from-blue-50/50 hover:to-purple-50/50 dark:hover:from-blue-900/10 dark:hover:to-purple-900/10 transition-all duration-300 transform hover:scale-[1.02]" data-id="@kh.MaKhachHang">
                                        <td class="px-6 py-4">
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300">
                                                KH@(kh.MaKhachHang.ToString("D4"))
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center">
                                                <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg mr-4">
                                                    <i class='bx bx-user text-xl text-white'></i>
                                                </div>
                                                <div>
                                                    <div class="font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                                        @kh.HoTen
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center">
                                                <i class='bx bx-envelope text-gray-400 mr-2'></i>
                                                @kh.Email
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center">
                                                <i class='bx bx-phone text-gray-400 mr-2'></i>
                                                @kh.DienThoai
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-4 group-hover:translate-x-0">
                                                <button onclick="viewCustomer(@kh.MaKhachHang)"
                                                        class="inline-flex items-center p-3 text-gray-400 hover:text-blue-600 hover:bg-blue-50 dark:hover:bg-blue-900/20 rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg group/action"
                                                        title="Xem chi tiết">
                                                    <i class='bx bx-show text-xl group-hover/action:scale-110 transition-transform'></i>
                                                </button>
                                                <button onclick="deleteCustomer(@kh.MaKhachHang, '@kh.HoTen')"
                                                        class="inline-flex items-center p-3 text-gray-400 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg group/action"
                                                        title="Xóa">
                                                    <i class='bx bx-trash text-xl group-hover/action:scale-110 transition-transform'></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Staff Tab Content -->
            <div id="staff-content" class="tab-content hidden space-y-4">
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gradient-to-r from-gray-50 to-amber-50 dark:from-gray-800 dark:to-amber-900/20 border-b-2 border-gray-200/50 dark:border-gray-700/50">
                                <tr>
                                    <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Mã NV</th>
                                    <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Họ tên</th>
                                    <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Lương</th>
                                    <th class="px-6 py-4 text-center text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="staffTableBody" class="divide-y divide-gray-200/30 dark:divide-gray-700/30">
                                @foreach (var nv in ViewBag.NhanViens)
                                {
                                    <tr class="group hover:bg-gradient-to-r hover:from-amber-50/50 hover:to-orange-50/50 dark:hover:from-amber-900/10 dark:hover:to-orange-900/10 transition-all duration-300 transform hover:scale-[1.02]" data-id="@nv.MaNhanVien">
                                        <td class="px-6 py-4">
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-amber-100 dark:bg-amber-900/30 text-amber-800 dark:text-amber-300">
                                                NV@(nv.MaNhanVien.ToString("D4"))
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center">
                                                <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-amber-500 to-orange-500 rounded-xl flex items-center justify-center shadow-lg mr-4">
                                                    <i class='bx bx-user-check text-xl text-white'></i>
                                                </div>
                                                <div>
                                                    <div class="font-bold text-gray-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
                                                        @nv.HoTen
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center">
                                                <i class='bx bx-envelope text-gray-400 mr-2'></i>
                                                @(nv.TaiKhoan?.Email ?? "Chưa có email")
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            @{
                                                var luong = nv.Luong;
                                                bool coLuong = luong != null && luong > 0;
                                            }
                                            @if (coLuong)
                                            {
                                                <div class="flex items-center">
                                                    <i class='bx bx-money text-gray-400 mr-2'></i>
                                                    <span class="font-bold text-green-600 dark:text-green-400">@(luong?.ToString("N0") ?? "0") VNĐ</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">Chưa cập nhật</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-4 group-hover:translate-x-0">
                                                <button onclick="viewStaff(@nv.MaNhanVien)"
                                                        class="inline-flex items-center p-3 text-gray-400 hover:text-blue-600 hover:bg-blue-50 dark:hover:bg-blue-900/20 rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg group/action"
                                                        title="Xem chi tiết">
                                                    <i class='bx bx-show text-xl group-hover/action:scale-110 transition-transform'></i>
                                                </button>
                                                <button onclick="editStaff(@nv.MaNhanVien)"
                                                        class="inline-flex items-center p-3 text-gray-400 hover:text-amber-600 hover:bg-amber-50 dark:hover:bg-amber-900/20 rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg group/action"
                                                        title="Chỉnh sửa">
                                                    <i class='bx bx-edit text-xl group-hover/action:scale-110 transition-transform'></i>
                                                </button>
                                                <button onclick="deleteStaff(@nv.MaNhanVien, '@nv.HoTen')"
                                                        class="inline-flex items-center p-3 text-gray-400 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg group/action"
                                                        title="Xóa">
                                                    <i class='bx bx-trash text-xl group-hover/action:scale-110 transition-transform'></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 bg-gradient-to-r from-gray-50 to-blue-50 dark:from-gray-800 dark:to-blue-900/10">
            <div class="flex flex-col sm:flex-row items-center justify-between">
                <div class="text-sm text-gray-600 dark:text-gray-400 mb-2 sm:mb-0">
                    <i class='bx bx-info-circle mr-2'></i>
                    Hiển thị @ViewBag.KhachHangs.Count khách hàng • @ViewBag.NhanViens.Count nhân viên • Cập nhật: @DateTime.Now.ToString("HH:mm dd/MM/yyyy")
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Tab functionality
    document.addEventListener('DOMContentLoaded', function () {
        const tabButtons = document.querySelectorAll('.tab-button');
        const tabContents = document.querySelectorAll('.tab-content');

        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                const targetTab = button.getAttribute('data-tab');

                // Update active tab button
                tabButtons.forEach(btn => {
                    btn.classList.remove('active', 'border-blue-500', 'text-blue-600', 'dark:text-blue-400', 'bg-blue-50', 'dark:bg-blue-900/20');
                    btn.classList.add('text-gray-600', 'dark:text-gray-400');
                });

                button.classList.add('active', 'border-blue-500', 'text-blue-600', 'dark:text-blue-400', 'bg-blue-50', 'dark:bg-blue-900/20');
                button.classList.remove('text-gray-600', 'dark:text-gray-400');

                // Update active tab content
                tabContents.forEach(content => {
                    content.classList.remove('active');
                    content.classList.add('hidden');
                });

                document.getElementById(`${targetTab}-content`).classList.add('active');
                document.getElementById(`${targetTab}-content`).classList.remove('hidden');
            });
        });

        // Search functionality
        document.getElementById('userSearch').addEventListener('keyup', function() {
            const value = this.value.toLowerCase();
            const activeTab = document.querySelector('.tab-button.active').getAttribute('data-tab');
            const rows = document.querySelectorAll(`#${activeTab}-content tbody tr`);

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.indexOf(value) > -1 ? '' : 'none';
            });
        });
    });

    // Customer functions
    function viewCustomer(id) {
        window.location.href = '@Url.Action("ChiTietKhachHang", "User")/' + id;
    }

    function deleteCustomer(id, name) {
        if (confirm('Bạn có chắc muốn xóa khách hàng "' + name + '"?')) {
            window.location.href = '@Url.Action("XoaUser", "User")/' + id;
        }
    }

    // Staff functions
    function editStaff(id) {
        window.location.href = '@Url.Action("SuaNhanVien", "User")/' + id;
    }

    function viewStaff(id) {
        window.location.href = '@Url.Action("ChiTietNhanVien", "User")/' + id;
    }

    function deleteStaff(id, name) {
        if (confirm('Bạn có chắc muốn xóa nhân viên "' + name + '"?')) {
            window.location.href = '@Url.Action("XoaNhanVien", "User")/' + id;
        }
    }
</script>

<style>
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .custom-scrollbar::-webkit-scrollbar {
        height: 6px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: #f1f5f9;
        border-radius: 10px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        border-radius: 10px;
    }

        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(135deg, #2563eb, #7c3aed);
        }

    .dark .custom-scrollbar::-webkit-scrollbar-track {
