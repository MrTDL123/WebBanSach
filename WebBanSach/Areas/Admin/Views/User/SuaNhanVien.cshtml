@model Media.Models.NhanVien
@{
    ViewData["Title"] = "Sửa Thông Tin Nhân Viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div class="space-y-2">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                Chỉnh Sửa Nhân Viên
            </h1>
            <p class="text-gray-600 dark:text-gray-400 text-lg">Cập nhật thông tin nhân viên trong hệ thống</p>
        </div>
        <div class="flex items-center gap-3">
            <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-300 rounded-full text-sm font-bold">
                NV@(Model.MaNhanVien.ToString("D4"))
            </span>
            <span class="text-gray-600 dark:text-gray-400">•</span>
            <span class="text-gray-900 dark:text-white font-medium">@Model.HoTen</span>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="p-4 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-2xl shadow-lg">
            <div class="flex items-center gap-3">
                <i class='bx bx-check-circle text-xl'></i>
                <div class="flex-1">
                    <strong>Thành công!</strong> @TempData["Success"]
                </div>
                <button type="button" onclick="this.parentElement.parentElement.remove()" class="text-white/80 hover:text-white">
                    <i class='bx bx-x text-xl'></i>
                </button>
            </div>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="p-4 bg-gradient-to-r from-red-500 to-rose-600 text-white rounded-2xl shadow-lg">
            <div class="flex items-center gap-3">
                <i class='bx bx-error text-xl'></i>
                <div class="flex-1">
                    <strong>Lỗi!</strong> @TempData["Error"]
                </div>
                <button type="button" onclick="this.parentElement.parentElement.remove()" class="text-white/80 hover:text-white">
                    <i class='bx bx-x text-xl'></i>
                </button>
            </div>
        </div>
    }

    <!-- Main Form -->
    <div class="bg-gradient-to-br from-white to-blue-50 dark:from-gray-800 dark:to-blue-900/20 rounded-2xl shadow-2xl border border-blue-100/50 dark:border-blue-800/30 overflow-hidden">
        <!-- Form Header -->
        <div class="px-6 py-4 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600">
            <div class="flex items-center gap-3">
                <div class="p-2 bg-white/20 rounded-xl backdrop-blur-sm border border-white/30">
                    <i class='bx bx-edit text-xl text-white'></i>
                </div>
                <div>
                    <h2 class="text-xl font-bold text-white">Thông Tin Nhân Viên</h2>
                    <p class="text-blue-100 text-sm">Cập nhật thông tin chi tiết nhân viên</p>
                </div>
            </div>
        </div>

        <form asp-action="SuaNhanVien" method="post" id="editStaffForm" class="p-6 space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="MaNhanVien" />

            <!-- Thông tin cá nhân -->
            <div class="space-y-4">
                <div class="flex items-center gap-2">
                    <i class='bx bx-user text-blue-500 text-xl'></i>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Thông tin cá nhân</h3>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Họ tên -->
                    <div class="space-y-2">
                        <label asp-for="HoTen" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Họ và tên <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <i class='bx bx-user absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400'></i>
                            <input asp-for="HoTen" class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-600 dark:focus:border-blue-600 transition-all duration-300" placeholder="Nhập họ và tên đầy đủ">
                        </div>
                        <span asp-validation-for="HoTen" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Ngày sinh -->
                    <div class="space-y-2">
                        <label asp-for="NgaySinh" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Ngày sinh</label>
                        <div class="relative">
                            <i class='bx bx-calendar absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400'></i>
                            <input asp-for="NgaySinh" type="date" class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-600 dark:focus:border-blue-600 transition-all duration-300">
                        </div>
                        <span asp-validation-for="NgaySinh" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- CCCD -->
                    <div class="space-y-2">
                        <label asp-for="CCCD" class="block text-sm font-medium text-gray-700 dark:text-gray-300">CCCD</label>
                        <div class="relative">
                            <i class='bx bx-id-card absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400'></i>
                            <input asp-for="CCCD" class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-600 dark:focus:border-blue-600 transition-all duration-300" placeholder="Nhập số CCCD">
                        </div>
                        <span asp-validation-for="CCCD" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="space-y-2">
                        <label asp-for="DiaChi" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Địa chỉ</label>
                        <div class="relative">
                            <i class='bx bx-map absolute left-3 top-3 text-gray-400'></i>
                            <textarea asp-for="DiaChi" class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-600 dark:focus:border-blue-600 transition-all duration-300" rows="3" placeholder="Nhập địa chỉ đầy đủ"></textarea>
                        </div>
                        <span asp-validation-for="DiaChi" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Quê quán -->
                    <div class="space-y-2">
                        <label asp-for="QueQuan" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Quê quán</label>
                        <div class="relative">
                            <i class='bx bx-home absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400'></i>
                            <input asp-for="QueQuan" class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-600 dark:focus:border-blue-600 transition-all duration-300" placeholder="Nhập quê quán">
                        </div>
                        <span asp-validation-for="QueQuan" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Thông tin công việc -->
            <div class="space-y-4">
                <div class="flex items-center gap-2">
                    <i class='bx bx-briefcase text-amber-500 text-xl'></i>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Thông tin công việc</h3>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Ngày vào làm -->
                    <div class="space-y-2">
                        <label asp-for="NgayVaoLam" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Ngày vào làm</label>
                        <div class="relative">
                            <i class='bx bx-calendar-check absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400'></i>
                            <input asp-for="NgayVaoLam" type="date" class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-600 dark:focus:border-blue-600 transition-all duration-300">
                        </div>
                        <span asp-validation-for="NgayVaoLam" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Bậc lương -->
                    <div class="space-y-2">
                        <label asp-for="BacLuong" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Bậc lương</label>
                        <div class="relative">
                            <i class='bx bx-trending-up absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400'></i>
                            <input asp-for="BacLuong" type="number" class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-600 dark:focus:border-blue-600 transition-all duration-300" placeholder="Nhập bậc lương">
                        </div>
                        <span asp-validation-for="BacLuong" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Lương -->
                    <div class="space-y-2 md:col-span-2">
                        <label asp-for="Luong" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Lương cơ bản (VNĐ)</label>
                        <div class="relative">
                            <i class='bx bx-money absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400'></i>
                            <input asp-for="Luong" type="number" step="100000" class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-600 dark:focus:border-blue-600 transition-all duration-300" placeholder="Nhập mức lương">
                        </div>
                        <span asp-validation-for="Luong" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Info Box -->
            <div class="p-4 bg-gradient-to-r from-blue-500/10 to-purple-500/10 dark:from-blue-500/20 dark:to-purple-500/20 rounded-xl border border-blue-200/50 dark:border-blue-700/30">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
                        <i class='bx bx-info-circle text-white text-xl'></i>
                    </div>
                    <div>
                        <h4 class="font-semibold text-gray-900 dark:text-white">Mẹo chỉnh sửa</h4>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Đảm bảo thông tin được cập nhật chính xác và đầy đủ trước khi lưu thay đổi.</p>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-gray-200 dark:border-gray-700">
                <button type="submit" class="flex-1 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-105 transform flex items-center justify-center gap-2">
                    <i class='bx bx-save'></i>
                    Cập nhật thông tin
                </button>
                <a href="@Url.Action("QuanLyNguoiDung")" class="flex-1 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold py-3 px-6 rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-105 transform flex items-center justify-center gap-2">
                    <i class='bx bx-x'></i>
                    Hủy bỏ
                </a>
                <a href="@Url.Action("ChiTietNhanVien", new { id = Model.MaNhanVien })" class="flex-1 bg-gradient-to-r from-blue-500 to-purple-500 hover:from-blue-600 hover:to-purple-600 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-105 transform flex items-center justify-center gap-2">
                    <i class='bx bx-show'></i>
                    Xem chi tiết
                </a>
            </div>
        </form>

        <!-- Footer -->
        <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 bg-gradient-to-r from-gray-50 to-blue-50 dark:from-gray-800 dark:to-blue-900/10">
            <div class="text-sm text-gray-600 dark:text-gray-400">
                <i class='bx bx-info-circle mr-2'></i>
                Chỉnh sửa thông tin nhân viên • Mã: NV@(Model.MaNhanVien.ToString("D4")) • Cập nhật: @DateTime.Now.ToString("HH:mm dd/MM/yyyy")
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('editStaffForm');
        const submitBtn = form.querySelector('button[type="submit"]');

        form.addEventListener('submit', function(e) {
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="bx bx-loader-circle bx-spin"></i> Đang cập nhật...';
            submitBtn.disabled = true;

            setTimeout(() => {
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }, 3000);
        });

        // Add input animations
        const inputs = document.querySelectorAll('input, textarea, select');
        inputs.forEach(input => {
            input.addEventListener('focus', function() {
                this.style.transform = 'translateY(-2px)';
                this.style.boxShadow = '0 4px 12px rgba(59, 130, 246, 0.15)';
            });

            input.addEventListener('blur', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = 'none';
            });
        });
    });
</script>