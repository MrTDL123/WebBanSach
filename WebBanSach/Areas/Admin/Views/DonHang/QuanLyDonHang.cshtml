@model IEnumerable<Media.Models.DonHang>
@{
    ViewData["Title"] = "Quản Lý Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    // Pagination variables
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalOrders = ViewBag.TotalOrders ?? 0;
    int paidOrders = ViewBag.PaidOrders ?? 0;
    int pendingOrders = ViewBag.PendingOrders ?? 0;
    decimal totalRevenue = ViewBag.TotalRevenue ?? 0;
    string search = ViewBag.Search ?? "";
    string status = ViewBag.Status ?? "";
    int pageSize = ViewBag.PageSize ?? 5;

    // Calculate display range
    int startOrder = ((currentPage - 1) * pageSize) + 1;
    int endOrder = Math.Min(currentPage * pageSize, totalOrders);
}

<div class="min-h-screen bg-gradient-to-br from-gray-50/50 via-blue-50/30 to-purple-50/30 dark:from-gray-900 dark:via-blue-900/10 dark:to-purple-900/10 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <div class="mb-8">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6">
                <div class="flex items-center gap-4">
                    <div class="p-4 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl shadow-2xl">
                        <i class='bx bx-package text-2xl text-white'></i>
                    </div>
                    <div>
                        <h1 class="text-4xl font-bold text-gray-900 dark:text-white bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                            Quản Lý Đơn Hàng
                        </h1>
                        <p class="text-gray-600 dark:text-gray-400 mt-2 text-lg">Quản lý và theo dõi tất cả đơn hàng trong hệ thống</p>
                    </div>
                </div>
                <div class="flex gap-3">
                    <button id="exportExcelBtn"
                            class="group inline-flex items-center px-6 py-3 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 hover:border-green-500 dark:hover:border-green-400 text-gray-700 dark:text-gray-300 rounded-2xl transition-all duration-300 hover:shadow-lg hover:scale-105">
                        <i class='bx bx-download mr-2 group-hover:scale-110 transition-transform'></i>
                        Xuất Excel
                    </button>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Total Orders -->
            <div class="group bg-gradient-to-br from-white to-blue-50 dark:from-gray-800 dark:to-blue-900/20 rounded-3xl shadow-xl border border-blue-100/50 dark:border-blue-800/30 p-6 hover:shadow-2xl transition-all duration-300 hover:scale-105 transform hover:-translate-y-1 cursor-pointer">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide">Tổng Đơn Hàng</p>
                        <p class="text-3xl font-bold text-gray-900 dark:text-white mt-2">@totalOrders</p>
                        <div class="flex items-center mt-2">
                            <i class='bx bx-trending-up text-green-500 mr-1'></i>
                            <span class="text-sm text-green-600 dark:text-green-400 font-medium">+12%</span>
                            <span class="text-sm text-gray-500 dark:text-gray-400 ml-2">so với tháng trước</span>
                        </div>
                    </div>
                    <div class="p-3 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl group-hover:scale-110 transition-transform duration-300">
                        <i class='bx bx-cart-alt text-2xl text-white'></i>
                    </div>
                </div>
            </div>

            <!-- Paid Orders -->
            <div class="group bg-gradient-to-br from-white to-green-50 dark:from-gray-800 dark:to-green-900/20 rounded-3xl shadow-xl border border-green-100/50 dark:border-green-800/30 p-6 hover:shadow-2xl transition-all duration-300 hover:scale-105 transform hover:-translate-y-1 cursor-pointer">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide">Đã Thanh Toán</p>
                        <p class="text-3xl font-bold text-gray-900 dark:text-white mt-2">@paidOrders</p>
                        <div class="flex items-center mt-2">
                            <i class='bx bx-trending-up text-green-500 mr-1'></i>
                            <span class="text-sm text-green-600 dark:text-green-400 font-medium">+8%</span>
                            <span class="text-sm text-gray-500 dark:text-gray-400 ml-2">tỷ lệ thành công</span>
                        </div>
                    </div>
                    <div class="p-3 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl group-hover:scale-110 transition-transform duration-300">
                        <i class='bx bx-credit-card text-2xl text-white'></i>
                    </div>
                </div>
            </div>

            <!-- Pending Payment -->
            <div class="group bg-gradient-to-br from-white to-amber-50 dark:from-gray-800 dark:to-amber-900/20 rounded-3xl shadow-xl border border-amber-100/50 dark:border-amber-800/30 p-6 hover:shadow-2xl transition-all duration-300 hover:scale-105 transform hover:-translate-y-1 cursor-pointer">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide">Chờ Thanh Toán</p>
                        <p class="text-3xl font-bold text-gray-900 dark:text-white mt-2">@pendingOrders</p>
                        <div class="flex items-center mt-2">
                            <i class='bx bx-time-five text-amber-500 mr-1'></i>
                            <span class="text-sm text-amber-600 dark:text-amber-400 font-medium">Cần xử lý</span>
                            <span class="text-sm text-gray-500 dark:text-gray-400 ml-2">đơn hàng</span>
                        </div>
                    </div>
                    <div class="p-3 bg-gradient-to-br from-amber-500 to-amber-600 rounded-2xl group-hover:scale-110 transition-transform duration-300">
                        <i class='bx bx-time text-2xl text-white'></i>
                    </div>
                </div>
            </div>

            <!-- Total Revenue -->
            <div class="group bg-gradient-to-br from-white to-emerald-50 dark:from-gray-800 dark:to-emerald-900/20 rounded-3xl shadow-xl border border-emerald-100/50 dark:border-emerald-800/30 p-6 hover:shadow-2xl transition-all duration-300 hover:scale-105 transform hover:-translate-y-1 cursor-pointer">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide">Tổng Doanh Thu</p>
                        <p class="text-3xl font-bold text-gray-900 dark:text-white mt-2">@totalRevenue.ToString("N0") ₫</p>
                        <div class="flex items-center mt-2">
                            <i class='bx bx-trending-up text-emerald-500 mr-1'></i>
                            <span class="text-sm text-emerald-600 dark:text-emerald-400 font-medium">+15%</span>
                            <span class="text-sm text-gray-500 dark:text-gray-400 ml-2">tăng trưởng</span>
                        </div>
                    </div>
                    <div class="p-3 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-2xl group-hover:scale-110 transition-transform duration-300">
                        <i class='bx bx-dollar-circle text-2xl text-white'></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters and Search -->
        <div class="bg-gradient-to-br from-white to-blue-50 dark:from-gray-800 dark:to-blue-900/20 rounded-3xl shadow-xl border border-blue-100/50 dark:border-blue-800/30 p-6 mb-6">
            <form method="get" action="@Url.Action("QuanLyDonHang")" id="filterForm">
                <div class="flex flex-col lg:flex-row gap-4 items-center justify-between">
                    <div class="flex flex-col sm:flex-row gap-4 flex-1 w-full">
                        <!-- Search -->
                        <div class="relative flex-1 max-w-md">
                            <i class='bx bx-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl'></i>
                            <input type="text"
                                   name="search"
                                   value="@search"
                                   placeholder="Tìm kiếm đơn hàng, khách hàng, số điện thoại..."
                                   class="w-full pl-12 pr-4 py-4 bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:border-blue-500 dark:focus:border-blue-400 focus:ring-4 focus:ring-blue-100 dark:focus:ring-blue-900/30 transition-all duration-300">
                        </div>

                        <!-- Status Filter -->
                        <div class="relative">
                            <select name="status" class="pl-4 pr-10 py-4 bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl text-gray-900 dark:text-white focus:border-blue-500 dark:focus:border-blue-400 focus:ring-4 focus:ring-blue-100 dark:focus:ring-blue-900/30 transition-all duration-300 appearance-none cursor-pointer">
                                <option value="">Tất cả trạng thái</option>
                                <option value="paid" selected='@(status == "paid")'>Đã thanh toán</option>
                                <option value="pending" selected='@(status == "pending")'>Chờ thanh toán</option>
                            </select>
                            <i class='bx bx-chevron-down absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl'></i>
                        </div>

                        <input type="hidden" name="pageSize" value="5" />
                    </div>

                    <div class="flex gap-3">
                        <button type="submit" class="px-6 py-4 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold rounded-2xl transition-all duration-300 hover:shadow-lg hover:scale-105 flex items-center">
                            <i class='bx bx-filter-alt mr-2'></i>
                            Áp dụng
                        </button>
                        <a href="@Url.Action("QuanLyDonHang")" class="px-6 py-4 bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 text-white font-semibold rounded-2xl transition-all duration-300 hover:shadow-lg hover:scale-105 flex items-center">
                            <i class='bx bx-reset mr-2'></i>
                            Đặt lại
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Main Card -->
        <div class="bg-gradient-to-br from-white to-purple-50 dark:from-gray-800 dark:to-purple-900/20 rounded-3xl shadow-2xl border border-purple-100/50 dark:border-purple-800/30 overflow-hidden">
            <!-- Card Header -->
            <div class="px-8 py-6 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                    <div class="flex items-center gap-4">
                        <div class="p-3 bg-white/20 rounded-2xl backdrop-blur-sm border border-white/30">
                            <i class='bx bx-list-ul text-2xl text-white'></i>
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold text-white">Danh Sách Đơn Hàng</h2>
                            <p class="text-blue-100 text-sm mt-1">@totalOrders đơn hàng được tìm thấy trong hệ thống</p>
                        </div>
                    </div>
                    <div class="mt-4 sm:mt-0 flex items-center gap-3">
                        <span class="bg-white/20 text-white text-sm px-4 py-2 rounded-full backdrop-blur-sm border border-white/30">
                            <i class='bx bx-sort-alt-2 mr-2'></i>
                            Sắp xếp
                        </span>
                        <span class="bg-white/20 text-white text-sm px-4 py-2 rounded-full backdrop-blur-sm border border-white/30">
                            <i class='bx bx-cog mr-2'></i>
                            Tùy chọn
                        </span>
                    </div>
                </div>
            </div>

            <!-- Table -->
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-gradient-to-r from-gray-50 to-blue-50 dark:from-gray-800 dark:to-blue-900/20 border-b-2 border-gray-200/50 dark:border-gray-700/50">
                            <th class="px-8 py-6 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class='bx bx-package'></i>
                                    Đơn hàng
                                </div>
                            </th>
                            <th class="px-8 py-6 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class='bx bx-user'></i>
                                    Khách hàng
                                </div>
                            </th>
                            <th class="px-8 py-6 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class='bx bx-dollar-circle'></i>
                                    Tổng tiền
                                </div>
                            </th>
                            <th class="px-8 py-6 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class='bx bx-calendar'></i>
                                    Ngày tạo
                                </div>
                            </th>
                            <th class="px-8 py-6 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class='bx bx-credit-card'></i>
                                    Thanh toán
                                </div>
                            </th>
                            <th class="px-8 py-6 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class='bx bx-truck'></i>
                                    Trạng thái giao hàng
                                </div>
                            </th>
                            <th class="px-8 py-6 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class='bx bx-cog'></i>
                                    Thao tác
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200/30 dark:divide-gray-700/30">
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="group hover:bg-gradient-to-r hover:from-blue-50/50 hover:to-purple-50/50 dark:hover:from-blue-900/10 dark:hover:to-purple-900/10 transition-all duration-300 transform hover:scale-[1.02]">
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                                                <i class='bx bx-cart text-xl text-white'></i>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-lg font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                                    #@item.MaDonHang
                                                </div>
                                                <div class="text-sm text-gray-500 dark:text-gray-400 flex items-center gap-1 mt-1">
                                                    <i class='bx bx-credit-card'></i>
                                                    @item.HinhThucThanhToan
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="text-base font-semibold text-gray-900 dark:text-white">@item.KhachHang?.HoTen</div>
                                        <div class="text-sm text-gray-500 dark:text-gray-400 flex items-center gap-1 mt-1">
                                            <i class='bx bx-phone'></i>
                                            @item.SoDienThoaiNhan
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="text-xl font-bold text-gray-900 dark:text-white bg-gradient-to-r from-green-600 to-emerald-600 bg-clip-text text-transparent">
                                            @item.Total.ToString("N0") ₫
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="text-base font-semibold text-gray-900 dark:text-white">@item.NgayTao.ToString("dd/MM/yyyy")</div>
                                        <div class="text-sm text-gray-500 dark:text-gray-400">@item.NgayTao.ToString("HH:mm")</div>
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        @if (item.DaThanhToan)
                                        {
                                            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-green-500 to-emerald-600 text-white shadow-lg">
                                                <i class='bx bx-check-circle mr-2'></i>
                                                Đã thanh toán
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-amber-500 to-orange-600 text-white shadow-lg">
                                                <i class='bx bx-time mr-2'></i>
                                                Chờ thanh toán
                                            </span>
                                        }
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        @if (item.VanChuyen != null)
                                        {
                                            @switch (item.VanChuyen.TrangThaiGiaoHang)
                                            {
                                                case TrangThaiGiaoHang.ChoXuLy:
                                                    <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-gray-500 to-gray-600 text-white shadow-lg">
                                                        <i class='bx bx-time-five mr-2'></i>
                                                        Chờ xử lý
                                                    </span>
                                                    break;
                                                case TrangThaiGiaoHang.DangGiaoHang:
                                                    <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-blue-500 to-blue-600 text-white shadow-lg">
                                                        <i class='bx bx-truck mr-2'></i>
                                                        Đang giao hàng
                                                    </span>
                                                    break;
                                                case TrangThaiGiaoHang.GiaoHangThanhCong:
                                                    <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-green-500 to-emerald-600 text-white shadow-lg">
                                                        <i class='bx bx-check-circle mr-2'></i>
                                                        Giao hàng thành công
                                                    </span>
                                                    break;
                                                case TrangThaiGiaoHang.GiaoThatBai:
                                                    <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-red-500 to-rose-600 text-white shadow-lg">
                                                        <i class='bx bx-x-circle mr-2'></i>
                                                        Giao thất bại
                                                    </span>
                                                    break;
                                                case TrangThaiGiaoHang.DaHuy:
                                                    <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-red-500 to-rose-600 text-white shadow-lg">
                                                        <i class='bx bx-x-circle mr-2'></i>
                                                        Đã hủy
                                                    </span>
                                                    break;
                                                default:
                                                    <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-gray-500 to-gray-600 text-white shadow-lg">
                                                        <i class='bx bx-question-mark mr-2'></i>
                                                        Không xác định
                                                    </span>
                                                    break;
                                            }
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-gray-500 to-gray-600 text-white shadow-lg">
                                                <i class='bx bx-package mr-2'></i>
                                                Chưa xử lý
                                            </span>
                                        }
                                    </td>
                                    <td class="px-8 py-6 whitespace-nowrap">
                                        <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-4 group-hover:translate-x-0">
                                            <!-- Details -->
                                            <a asp-area="Admin" asp-controller="DonHang" asp-action="Details" asp-route-id="@item.MaDonHang"
                                               class="inline-flex items-center p-3 text-gray-400 hover:text-blue-600 hover:bg-blue-50 dark:hover:bg-blue-900/20 rounded-2xl transition-all duration-300 hover:scale-110 hover:shadow-lg group/action"
                                               title="Xem chi tiết">
                                                <i class='bx bx-show text-xl group-hover/action:scale-110 transition-transform'></i>
                                            </a>

                                            <!-- Edit -->
                                            <a asp-area="Admin" asp-controller="DonHang" asp-action="Edit" asp-route-id="@item.MaDonHang"
                                               class="inline-flex items-center p-3 text-gray-400 hover:text-amber-600 hover:bg-amber-50 dark:hover:bg-amber-900/20 rounded-2xl transition-all duration-300 hover:scale-110 hover:shadow-lg group/action"
                                               title="Chỉnh sửa">
                                                <i class='bx bx-edit text-xl group-hover/action:scale-110 transition-transform'></i>
                                            </a>

                                            <!-- Delete Form -->
                                            <form asp-area="Admin" asp-controller="DonHang" asp-action="Delete" method="post" class="inline">
                                                <input type="hidden" name="id" value="@item.MaDonHang" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="inline-flex items-center p-3 text-gray-400 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-2xl transition-all duration-300 hover:scale-110 hover:shadow-lg group/action"
                                                        title="Xóa"
                                                        onclick="return confirm('Bạn có chắc muốn xóa đơn hàng #@item.MaDonHang?');">
                                                    <i class='bx bx-trash text-xl group-hover/action:scale-110 transition-transform'></i>
                                                </button>
                                            </form>

                                            <!-- Print -->
                                            <button class="inline-flex items-center p-3 text-gray-400 hover:text-green-600 hover:bg-green-50 dark:hover:bg-green-900/20 rounded-2xl transition-all duration-300 hover:scale-110 hover:shadow-lg group/action"
                                                    title="In hóa đơn"
                                                    onclick="printInvoice(@item.MaDonHang)">
                                                <i class='bx bx-printer text-xl group-hover/action:scale-110 transition-transform'></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="px-8 py-12 text-center">
                                    <div class="flex flex-col items-center justify-center">
                                        <i class='bx bx-package text-6xl text-gray-400 mb-4'></i>
                                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Không có đơn hàng nào</h3>
                                        <p class="text-gray-500 dark:text-gray-400">Không tìm thấy đơn hàng phù hợp với tiêu chí tìm kiếm.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer với phân trang -->
            @if (totalPages > 1)
            {
                <div class="px-8 py-6 border-t-2 border-gray-200/30 dark:border-gray-700/30 bg-gradient-to-r from-gray-50 to-blue-50 dark:from-gray-800 dark:to-blue-900/10">
                    <div class="flex flex-col sm:flex-row items-center justify-between">
                        <div class="text-sm text-gray-600 dark:text-gray-400 mb-4 sm:mb-0">
                            Hiển thị <span class="font-bold text-gray-900 dark:text-white">@startOrder-@endOrder</span> trong tổng số <span class="font-bold text-gray-900 dark:text-white">@totalOrders</span> đơn hàng
                        </div>
                        <div class="flex items-center gap-2">
                            <!-- Nút Previous -->
                            @if (currentPage > 1)
                            {
                                <a href="@Url.Action("QuanLyDonHang", new { page = currentPage - 1, search = search, status = status, pageSize = 5 })"
                                   class="px-4 py-3 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400 text-gray-700 dark:text-gray-300 rounded-2xl transition-all duration-300 hover:shadow-lg hover:scale-105 flex items-center group">
                                    <i class='bx bx-chevron-left text-xl group-hover:-translate-x-1 transition-transform'></i>
                                    <span class="ml-2">Trước</span>
                                </a>
                            }
                            else
                            {
                                <span class="px-4 py-3 bg-gray-100 dark:bg-gray-700 border-2 border-gray-300 dark:border-gray-600 text-gray-400 dark:text-gray-500 rounded-2xl flex items-center cursor-not-allowed">
                                    <i class='bx bx-chevron-left text-xl'></i>
                                    <span class="ml-2">Trước</span>
                                </span>
                            }

                            <!-- Các nút trang -->
                            @{
                                int startPage = Math.Max(1, currentPage - 2);
                                int endPage = Math.Min(totalPages, currentPage + 2);
                            }

                            <!-- Trang đầu -->
                            @if (startPage > 1)
                            {
                                <a href="@Url.Action("QuanLyDonHang", new { page = 1, search = search, status = status, pageSize = 5 })"
                                   class="px-4 py-3 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400 text-gray-700 dark:text-gray-300 rounded-2xl transition-all duration-300 hover:shadow-lg hover:scale-105">
                                    1
                                </a>
                                @if (startPage > 2)
                                {
                                    <span class="px-2 text-gray-500">...</span>
                                }
                            }

                            <!-- Các trang giữa -->
                            @for (int i = startPage; i <= endPage; i++)
                            {
                                if (i == currentPage)
                                {
                                    <span class="px-4 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-2xl font-bold shadow-lg">@i</span>
                                }
                                else
                                {
                                    <a href="@Url.Action("QuanLyDonHang", new { page = i, search = search, status = status, pageSize = 5 })"
                                       class="px-4 py-3 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400 text-gray-700 dark:text-gray-300 rounded-2xl transition-all duration-300 hover:shadow-lg hover:scale-105">@i</a>
                                }
                            }

                            <!-- Trang cuối -->
                            @if (endPage < totalPages)
                            {
                                @if (endPage < totalPages - 1)
                                {
                                    <span class="px-2 text-gray-500">...</span>
                                }
                                <a href="@Url.Action("QuanLyDonHang", new { page = totalPages, search = search, status = status, pageSize = 5 })"
                                   class="px-4 py-3 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400 text-gray-700 dark:text-gray-300 rounded-2xl transition-all duration-300 hover:shadow-lg hover:scale-105">@totalPages</a>
                            }

                            <!-- Nút Next -->
                            @if (currentPage < totalPages)
                            {
                                <a href="@Url.Action("QuanLyDonHang", new { page = currentPage + 1, search = search, status = status, pageSize = 5 })"
                                   class="px-4 py-3 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400 text-gray-700 dark:text-gray-300 rounded-2xl transition-all duration-300 hover:shadow-lg hover:scale-105 flex items-center group">
                                    <span class="mr-2">Tiếp</span>
                                    <i class='bx bx-chevron-right text-xl group-hover:translate-x-1 transition-transform'></i>
                                </a>
                            }
                            else
                            {
                                <span class="px-4 py-3 bg-gray-100 dark:bg-gray-700 border-2 border-gray-300 dark:border-gray-600 text-gray-400 dark:text-gray-500 rounded-2xl flex items-center cursor-not-allowed">
                                    <span class="mr-2">Tiếp</span>
                                    <i class='bx bx-chevron-right text-xl'></i>
                                </span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Xử lý thông báo từ TempData
            @if (TempData["Success"] != null)
            {
                    <text>showNotification('@TempData["Success"]', 'success');</text>
            }
            @if (TempData["Error"] != null)
            {
                    <text>showNotification('@TempData["Error"]', 'error');</text>
            }

            // Xử lý nút xuất Excel
            document.getElementById('exportExcelBtn').addEventListener('click', function() {
                exportToExcel();
            });

            // Xử lý form delete
            document.querySelectorAll('form[asp-action="Delete"]').forEach(form => {
                form.addEventListener('submit', function(e) {
                    const orderId = this.querySelector('input[name="id"]').value;
                    if (!confirm(`Bạn có chắc muốn xóa đơn hàng #${orderId}?`)) {
                        e.preventDefault();
                    }
                });
            });

            // Auto submit form khi page size changes
            document.querySelector('select[name="pageSize"]')?.addEventListener('change', function() {
                document.getElementById('filterForm').submit();
            });

            // Add loading animation
            const table = document.querySelector('tbody');
            if (table) {
                table.classList.add('opacity-0');
                setTimeout(() => {
                    table.classList.add('opacity-100', 'transition-opacity', 'duration-500');
                }, 100);
            }
        });

        // Hàm xuất Excel
        function exportToExcel() {
            const btn = document.getElementById('exportExcelBtn');
            const originalHTML = btn.innerHTML;

            // Hiển thị trạng thái loading
            btn.innerHTML = '<i class="bx bx-loader-alt bx-spin mr-2"></i> Đang xuất Excel...';
            btn.disabled = true;

            // Lấy các tham số tìm kiếm hiện tại
            const search = '@ViewBag.Search' || '';
            const status = '@ViewBag.Status' || '';

            try {
                // Tạo URL với các tham số
                const url = `/Admin/DonHang/ExportToExcel?search=${encodeURIComponent(search)}&status=${encodeURIComponent(status)}`;

                // Tạo một thẻ a ẩn để download
                const link = document.createElement('a');
                link.href = url;
                link.download = 'DanhSachDonHang.xlsx';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                // Hiển thị thông báo thành công
                setTimeout(() => {
                    showNotification('Xuất file Excel thành công!', 'success');
                }, 1000);

            } catch (error) {
                console.error('Lỗi khi xuất Excel:', error);
                showNotification('Lỗi khi xuất file Excel: ' + error.message, 'error');
            } finally {
                // Khôi phục trạng thái ban đầu của button
                setTimeout(() => {
                    btn.innerHTML = originalHTML;
                    btn.disabled = false;
                }, 2000);
            }
        }

        function printInvoice(orderId) {
            alert(`In hóa đơn cho đơn hàng #${orderId}`);
            // Bạn có thể thay thế bằng: window.open(`/Admin/DonHang/Print/${orderId}`, '_blank');
        }

        function showNotification(message, type) {
            // Tạo notification đẹp hơn
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 p-4 rounded-2xl shadow-2xl z-50 transform transition-all duration-500 ${
                type === 'success'
                    ? 'bg-gradient-to-r from-green-500 to-emerald-600 text-white'
                    : 'bg-gradient-to-r from-red-500 to-rose-600 text-white'
            }`;

            notification.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class='bx ${type === 'success' ? 'bx-check-circle' : 'bx-error'} text-xl'></i>
                    <span>${message}</span>
                </div>
            `;

            document.body.appendChild(notification);

            // Tự động ẩn sau 5 giây
            setTimeout(() => {
                notification.remove();
            }, 5000);
        }
    </script>

    <style>
        .animate-pulse {
            animation: pulse 0.5s ease-in-out;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.02);
            }
        }

        /* Custom scrollbar */
        .overflow-x-auto::-webkit-scrollbar {
            height: 8px;
        }

        .overflow-x-auto::-webkit-scrollbar-track {
            background: #f1f5f9;
            border-radius: 10px;
        }

        .overflow-x-auto::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            border-radius: 10px;
        }

            .overflow-x-auto::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(135deg, #2563eb, #7c3aed);
            }
    </style>
