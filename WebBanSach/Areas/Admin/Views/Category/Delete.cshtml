@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradien m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Xóa thể loại</h2>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row">
                <div class="border p-3">
                    <div class="mb-3 row">
                        <label asp-for="Name" class="p-1"></label>
                        <input asp-for="Name" class="form-control" disabled id="delete_input" />
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="DisplayOrder" class="p-1"></label>
                        <input asp-for="DisplayOrder" class="form-control" disabled id="delete_input"/>
                    </div>

                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn form-control btn-primary  bg-danger">Xóa</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                                Quay về
                            </a>
                        </div>
                    </div>

                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}