@model Media.Models.ChuDe
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sửa thể loại";
}

<!DOCTYPE html>
<html lang="vi" class="h-full">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f4ff',
                            100: '#e0e8ff',
                            500: '#667eea',
                            600: '#5a67d8',
                            700: '#4c51bf',
                        },
                        dark: {
                            800: '#1a202c',
                            900: '#0f1419',
                        }
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-in-out',
                        'slide-up': 'slideUp 0.3s ease-out',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' },
                        },
                        slideUp: {
                            '0%': { transform: 'translateY(10px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' },
                        },
                    }
                }
            }
        }
    </script>
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .gradient-bg-success {
            background: linear-gradient(135deg, #06d6a0 0%, #04a777 100%);
        }

        .gradient-bg-warning {
            background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
        }
    </style>
</head>
<body class="min-h-full bg-gradient-to-br from-gray-50/50 via-blue-50/30 to-purple-50/30 dark:from-gray-900 dark:via-blue-900/10 dark:to-purple-900/10 transition-colors duration-300">
    <div class="container mx-auto px-4 py-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6">
                <div class="flex items-center gap-4">
                    <div class="p-4 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl shadow-2xl">
                        <i class='bx bx-edit text-2xl text-white'></i>
                    </div>
                    <div>
                        <h1 class="text-4xl font-bold text-gray-900 dark:text-white bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                            Chỉnh Sửa Thể Loại
                        </h1>
                        <p class="text-gray-600 dark:text-gray-400 mt-2 text-lg">Cập nhật thông tin thể loại trong hệ thống</p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <span class="bg-gradient-to-r from-amber-500 to-amber-600 text-white text-sm px-4 py-2 rounded-full font-semibold">
                        Mã: @Model.MaChuDe
                    </span>
                </div>
            </div>
        </div>

        <!-- Form Container -->
        <div class="max-w-4xl mx-auto">
            <div class="bg-gradient-to-br from-white to-blue-50 dark:from-gray-800 dark:to-blue-900/20 rounded-3xl shadow-2xl border border-blue-100/50 dark:border-blue-800/30 overflow-hidden">
                <!-- Card Header -->
                <div class="px-8 py-6 gradient-bg">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                        <div class="flex items-center gap-4">
                            <div class="p-3 bg-white/20 rounded-2xl backdrop-blur-sm border border-white/30">
                                <i class='bx bx-category text-2xl text-white'></i>
                            </div>
                            <div>
                                <h2 class="text-2xl font-bold text-white">Thông Tin Thể Loại</h2>
                                <p class="text-blue-100 text-sm mt-1">@Model.TenChuDe</p>
                            </div>
                        </div>
                        <div class="mt-4 sm:mt-0">
                            <div class="flex items-center gap-2 text-white/80">
                                <i class='bx bx-time'></i>
                                <span class="text-sm">Cập nhật: @DateTime.Now.ToString("HH:mm dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Content -->
                <div class="p-8">
                    <form asp-action="SuaTheLoai" method="post" id="editCategoryForm" class="space-y-6">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MaChuDe" />

                        <!-- Thông tin thể loại -->
                        <div class="space-y-6">
                            <div class="flex items-center gap-3 p-4 bg-gradient-to-r from-blue-600/10 to-purple-600/10 dark:from-blue-600/20 dark:to-purple-600/20 rounded-2xl border border-blue-200/50 dark:border-blue-700/30">
                                <div class="p-3 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl">
                                    <i class='bx bx-info-circle text-xl text-white'></i>
                                </div>
                                <div>
                                    <h3 class="text-lg font-bold text-gray-900 dark:text-white">Thông tin thể loại</h3>
                                    <p class="text-gray-600 dark:text-gray-400 text-sm">Cập nhật thông tin cơ bản của thể loại</p>
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <!-- Tên thể loại -->
                                <div class="space-y-2">
                                    <label asp-for="TenChuDe" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
                                        Tên thể loại <span class="text-red-500">*</span>
                                    </label>
                                    <div class="relative">
                                        <i class='bx bx-text absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl'></i>
                                        <input asp-for="TenChuDe"
                                               class="w-full pl-12 pr-4 py-3 bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:border-blue-500 dark:focus:border-blue-400 focus:ring-4 focus:ring-blue-100 dark:focus:ring-blue-900/30 transition-all duration-300"
                                               placeholder="Nhập tên thể loại"
                                               required />
                                    </div>
                                    <span asp-validation-for="TenChuDe" class="text-red-500 text-sm"></span>
                                    @if (ViewData.ModelState["TenChuDe"]?.Errors?.Count > 0)
                                    {
                                        <span class="text-red-500 text-sm">@ViewData.ModelState["TenChuDe"].Errors[0].ErrorMessage</span>
                                    }
                                </div>

                                <!-- Slug -->
                                <div class="space-y-2">
                                    <label asp-for="Slug" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
                                        Slug
                                    </label>
                                    <div class="relative">
                                        <i class='bx bx-link absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl'></i>
                                        <input asp-for="Slug"
                                               class="w-full pl-12 pr-4 py-3 bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:border-blue-500 dark:focus:border-blue-400 focus:ring-4 focus:ring-blue-100 dark:focus:ring-blue-900/30 transition-all duration-300"
                                               placeholder="VD: tieu-thuyet, sach-giao-khoa" />
                                    </div>
                                    <p class="text-gray-500 dark:text-gray-400 text-sm">Slug sẽ được tự động tạo nếu để trống</p>
                                    <span asp-validation-for="Slug" class="text-red-500 text-sm"></span>
                                </div>

                                <!-- Full Path -->
                                <div class="space-y-2 md:col-span-2">
                                    <label asp-for="FullPath" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
                                        Đường dẫn đầy đủ
                                    </label>
                                    <div class="relative">
                                        <i class='bx bx-map absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl'></i>
                                        <input asp-for="FullPath"
                                               class="w-full pl-12 pr-4 py-3 bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:border-blue-500 dark:focus:border-blue-400 focus:ring-4 focus:ring-blue-100 dark:focus:ring-blue-900/30 transition-all duration-300"
                                               placeholder="VD: /sach-van-hoc/tieu-thuyet" />
                                    </div>
                                    <span asp-validation-for="FullPath" class="text-red-500 text-sm"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Phân cấp thể loại -->
                        <div class="space-y-6">
                            <div class="flex items-center gap-3 p-4 bg-gradient-to-r from-amber-500/10 to-orange-500/10 dark:from-amber-500/20 dark:to-orange-500/20 rounded-2xl border border-amber-200/50 dark:border-amber-700/30">
                                <div class="p-3 bg-gradient-to-br from-amber-500 to-orange-500 rounded-2xl">
                                    <i class='bx bx-sitemap text-xl text-white'></i>
                                </div>
                                <div>
                                    <h3 class="text-lg font-bold text-gray-900 dark:text-white">Phân cấp thể loại</h3>
                                    <p class="text-gray-600 dark:text-gray-400 text-sm">Thiết lập phân cấp cho thể loại</p>
                                </div>
                            </div>

                            <div class="space-y-2">
                                <label asp-for="ParentId" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
                                    Thể loại cha
                                </label>
                                <div class="relative">
                                    <i class='bx bx-category absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl z-10'></i>
                                    <select asp-for="ParentId"
                                            class="w-full pl-12 pr-4 py-3 bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl text-gray-900 dark:text-white focus:border-blue-500 dark:focus:border-blue-400 focus:ring-4 focus:ring-blue-100 dark:focus:ring-blue-900/30 transition-all duration-300 appearance-none">
                                        <option value="">-- Thể loại chính (không có cha) --</option>
                                        @if (ViewBag.ParentCategories != null)
                                        {
                                            foreach (var category in ViewBag.ParentCategories as List<Media.Models.ChuDe>)
                                            {
                                                <option value="@category.MaChuDe" selected="@(category.MaChuDe == Model.ParentId)">
                                                    @category.TenChuDe
                                                </option>
                                            }
                                        }
                                    </select>
                                    <i class='bx bx-chevron-down absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl'></i>
                                </div>
                                <span asp-validation-for="ParentId" class="text-red-500 text-sm"></span>
                            </div>
                        </div>

                        <!-- Mẹo chỉnh sửa -->
                        <div class="p-6 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-2xl border border-blue-200/50 dark:border-blue-700/30">
                            <div class="flex items-start gap-4">
                                <div class="p-3 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl">
                                    <i class='bx bx-bulb text-xl text-white'></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-900 dark:text-white mb-2">Mẹo chỉnh sửa</h4>
                                    <ul class="text-gray-600 dark:text-gray-400 text-sm space-y-1">
                                        <li>• Tên thể loại nên ngắn gọn và dễ hiểu</li>
                                        <li>• Slug sẽ được dùng trong URL</li>
                                        <li>• Chọn thể loại cha để tạo phân cấp</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons & System Info -->
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                            <!-- System Info -->
                            <div class="space-y-4">
                                <div class="p-6 bg-gradient-to-r from-gray-800 to-gray-900 rounded-2xl text-white">
                                    <h4 class="font-bold mb-4 flex items-center gap-2">
                                        <i class='bx bx-info-circle'></i>
                                        Thông tin hệ thống
                                    </h4>
                                    <div class="space-y-3">
                                        <div class="flex justify-between items-center pb-2 border-b border-gray-700">
                                            <span class="text-gray-300">Mã thể loại:</span>
                                            <span class="font-semibold">@Model.MaChuDe</span>
                                        </div>
                                        <div class="flex justify-between items-center pb-2 border-b border-gray-700">
                                            <span class="text-gray-300">Ngày cập nhật:</span>
                                            <span>@DateTime.Now.ToString("dd/MM/yyyy")</span>
                                        </div>
                                        <div class="flex justify-between items-center">
                                            <span class="text-gray-300">Trạng thái:</span>
                                            <span class="bg-green-500 text-white px-2 py-1 rounded-full text-xs font-semibold">Đang chỉnh sửa</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="space-y-4">
                                <button type="submit"
                                        class="w-full bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white font-semibold py-4 px-6 rounded-2xl transition-all duration-300 hover:shadow-2xl hover:scale-105 transform hover:-translate-y-1 flex items-center justify-center gap-2">
                                    <i class='bx bx-save text-xl'></i>
                                    Cập nhật thể loại
                                </button>

                                <a href="@Url.Action("QuanLyTheLoai", "TheLoai", new { area = "Admin" })"
                                   class="w-full bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 text-white font-semibold py-4 px-6 rounded-2xl transition-all duration-300 hover:shadow-2xl hover:scale-105 transform hover:-translate-y-1 flex items-center justify-center gap-2">
                                    <i class='bx bx-x text-xl'></i>
                                    Hủy bỏ
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Footer Info -->
        <div class="text-center mt-8">
            <div class="text-gray-500 dark:text-gray-400 text-sm flex flex-wrap justify-center items-center gap-2">
                <span class="flex items-center">
                    <i class='bx bx-info-circle mr-2'></i>
                    Chỉnh sửa thông tin thể loại
                </span>
                <span>•</span>
                <span>Mã: @Model.MaChuDe</span>
                <span>•</span>
                <span>Cập nhật: @DateTime.Now.ToString("HH:mm dd/MM/yyyy")</span>
            </div>
        </div>
    </div>

    <!-- Dark Mode Toggle -->
    <button id="darkModeToggle" class="fixed bottom-6 right-6 bg-white dark:bg-gray-800 text-gray-800 dark:text-white p-3 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 z-10 border border-gray-200 dark:border-gray-700">
        <i class="bx bx-moon dark:hidden"></i>
        <i class="bx bx-sun hidden dark:block"></i>
    </button>

    <script>
        // Khởi tạo dark mode
        document.addEventListener('DOMContentLoaded', function () {
            const darkModeToggle = document.getElementById('darkModeToggle');

            // Kiểm tra cài đặt dark mode từ localStorage
            if (localStorage.getItem('darkMode') === 'true') {
                document.documentElement.classList.add('dark');
            } else if (localStorage.getItem('darkMode') === 'false') {
                document.documentElement.classList.remove('dark');
            } else if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                // Nếu không có cài đặt, sử dụng cài đặt hệ thống
                document.documentElement.classList.add('dark');
                localStorage.setItem('darkMode', 'true');
            }

            // Xử lý sự kiện toggle dark mode
            darkModeToggle.addEventListener('click', function() {
                document.documentElement.classList.toggle('dark');
                localStorage.setItem('darkMode', document.documentElement.classList.contains('dark'));
            });

            // Tự động tạo slug từ tên thể loại
            const tenChuDeInput = document.getElementById('TenChuDe');
            const slugInput = document.getElementById('Slug');

            if (tenChuDeInput && slugInput) {
                tenChuDeInput.addEventListener('blur', function() {
                    if (!slugInput.value && this.value) {
                        // Chuyển đổi tiếng Việt có dấu thành không dấu
                        const slug = this.value
                            .toLowerCase()
                            .normalize('NFD')
                            .replace(/[\u0300-\u036f]/g, '')
                            .replace(/[đĐ]/g, 'd')
                            .replace(/[^a-z0-9 -]/g, '')
                            .replace(/\s+/g, '-')
                            .replace(/-+/g, '-');

                        slugInput.value = slug;
                    }
                });
            }

            // Hiển thị thông báo từ TempData
            @if (TempData["Success"] != null)
            {
                    <text>showNotification('@TempData["Success"]', 'success');</text>
            }
            @if (TempData["Error"] != null)
            {
                    <text>showNotification('@TempData["Error"]', 'error');</text>
            }
        });

        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 p-4 rounded-2xl shadow-2xl z-50 transform transition-all duration-500 ${
                type === 'success'
                    ? 'bg-gradient-to-r from-green-500 to-emerald-600 text-white'
                    : 'bg-gradient-to-r from-red-500 to-rose-600 text-white'
            }`;

            notification.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class='bx ${type === 'success' ? 'bx-check-circle' : 'bx-error'} text-xl'></i>
                    <span>${message}</span>
                </div>
            `;

            document.body.appendChild(notification);

            // Tự động ẩn sau 5 giây
            setTimeout(() => {
                notification.remove();
            }, 5000);
        }
    </script>
</body>
</html>