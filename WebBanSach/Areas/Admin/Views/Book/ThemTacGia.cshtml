@model Media.Models.TacGia
@{
    ViewBag.Title = "Thêm tác giả";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-user-plus me-2 fs-4"></i>
                <h2 class="mb-0 fs-4">Thêm tác giả mới</h2>
            </div>
        </div>

        <div class="card-body p-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="ThemTacGia" method="post" id="formThemTacGia">
                @Html.AntiForgeryToken()

                <div class="row g-4">
                    <!-- Thông tin cơ bản -->
                    <div class="col-12">
                        <h5 class="text-primary mb-3 border-bottom pb-2">
                            <i class="fas fa-info-circle me-2"></i>Thông tin cơ bản
                        </h5>
                    </div>

                    <!-- Tên tác giả -->
                    <div class="col-md-8">
                        <label class="form-label fw-semibold">Tên tác giả <span class="text-danger">*</span></label>
                        <input asp-for="TenTG" class="form-control" placeholder="Nhập họ tên đầy đủ của tác giả..." />
                        <span asp-validation-for="TenTG" class="text-danger small"></span>
                    </div>

                    <!-- Quốc tịch -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Quốc tịch</label>
                        <input asp-for="QuocTich" class="form-control" placeholder="Ví dụ: Việt Nam, Mỹ, Anh..." />
                        <span asp-validation-for="QuocTich" class="text-danger small"></span>
                    </div>

                    <!-- Thông tin bổ sung -->
                    <div class="col-12 mt-4">
                        <h5 class="text-primary mb-3 border-bottom pb-2">
                            <i class="fas fa-file-alt me-2"></i>Thông tin bổ sung
                        </h5>
                    </div>

                    <!-- Tiểu sử -->
                    <div class="col-12">
                        <label class="form-label fw-semibold">Tiểu sử</label>
                        <textarea asp-for="TieuSu" class="form-control" rows="6"
                                  placeholder="Nhập tiểu sử, sự nghiệp, các tác phẩm nổi bật của tác giả..."></textarea>
                        <div class="form-text text-muted mt-2">
                            <i class="fas fa-lightbulb me-1"></i>
                            Tiểu sử chi tiết sẽ giúp độc giả hiểu rõ hơn về tác giả
                        </div>
                        <span asp-validation-for="TieuSu" class="text-danger small"></span>
                    </div>

                    <!-- Thông tin tác phẩm (nếu có) -->
                    <div class="col-12 mt-4">
                        <h5 class="text-primary mb-3 border-bottom pb-2">
                            <i class="fas fa-book me-2"></i>Thông tin tác phẩm
                        </h5>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Tác phẩm nổi bật</label>
                                <input type="text" class="form-control" placeholder="Nhập tên tác phẩm nổi bật..." />
                                <div class="form-text">Có thể bổ sung sau khi thêm tác giả</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Thể loại chính</label>
                                <input type="text" class="form-control" placeholder="Ví dụ: Tiểu thuyết, Thơ, Kịch..." />
                                <div class="form-text">Thể loại tác giả thường viết</div>
                            </div>
                        </div>
                    </div>

                    <!-- Ảnh tác giả (tùy chọn) -->
                    <div class="col-12 mt-4">
                        <h5 class="text-primary mb-3 border-bottom pb-2">
                            <i class="fas fa-image me-2"></i>Hình ảnh
                        </h5>

                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Ảnh tác giả</label>
                                <input class="form-control" type="file" name="fileAnhTacGia" id="fileAnhTacGia" accept="image/*" />
                                <div class="form-text">Chọn ảnh chân dung tác giả (tùy chọn)</div>
                            </div>

                            <div class="col-md-6">
                                <div class="border rounded p-3 text-center bg-light">
                                    <p class="fw-semibold mb-2">Xem trước ảnh</p>
                                    <img id="previewImg" src="https://via.placeholder.com/200x250?text=No+Image" alt="Ảnh tác giả"
                                         class="img-fluid rounded shadow-sm" style="max-height: 200px; max-width: 100%;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Nút hành động -->
                <div class="row mt-5">
                    <div class="col-12">
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("QuanLyTacGia", "Book")" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-times me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Thêm tác giả
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('fileAnhTacGia');
            const preview = document.getElementById('previewImg');

            // Xử lý thay đổi ảnh
            if (fileInput) {
                fileInput.addEventListener('change', function() {
                    const file = this.files[0];
                    if (file) {
                        if (file.size > 5 * 1024 * 1024) {
                            alert('Kích thước ảnh không được vượt quá 5MB');
                            this.value = '';
                            return;
                        }

                        if (!file.type.startsWith('image/')) {
                            alert('Vui lòng chọn file ảnh');
                            this.value = '';
                            return;
                        }

                        preview.src = URL.createObjectURL(file);
                    }
                });
            }

            // Xử lý form submit
            document.getElementById('formThemTacGia').addEventListener('submit', function(e) {
                const tenTG = document.querySelector('[name="TenTG"]').value.trim();

                if (!tenTG) {
                    e.preventDefault();
                    alert('Vui lòng nhập tên tác giả');
                    document.querySelector('[name="TenTG"]').focus();
                    return;
                }

                // Hiển thị loading
                const submitBtn = this.querySelector('button[type="submit"]');
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...';
                submitBtn.disabled = true;
            });

            // Auto-resize textarea
            const textarea = document.querySelector('textarea');
            if (textarea) {
                textarea.addEventListener('input', function() {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                });
            }
        });
    </script>
}   