@model Media.Models.Sach
@{
    ViewBag.Title = "Sửa sách";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-edit me-2 fs-4"></i>
                <h2 class="mb-0 fs-4">Sửa thông tin sách</h2>
            </div>
        </div>

        <div class="card-body p-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="SuaSach" method="post" enctype="multipart/form-data" id="formSuaSach">
                <input type="hidden" asp-for="MaSach" />

                <div class="row g-4">
                    <!-- Thông tin cơ bản -->
                    <div class="col-12">
                        <h5 class="text-primary mb-3 border-bottom pb-2">
                            <i class="fas fa-info-circle me-2"></i>Thông tin cơ bản
                        </h5>
                    </div>

                    <!-- Tên sách -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Tên sách <span class="text-danger">*</span></label>
                        <input asp-for="TenSach" class="form-control" placeholder="Nhập tên sách..." />
                        <span asp-validation-for="TenSach" class="text-danger small"></span>
                    </div>

                    <!-- Giá bán -->
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Giá bán (VNĐ) <span class="text-danger">*</span></label>
                        <input asp-for="GiaBan" class="form-control" type="number" min="0" placeholder="0" />
                        <span asp-validation-for="GiaBan" class="text-danger small"></span>
                    </div>

                    <!-- Số lượng -->
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Số lượng <span class="text-danger">*</span></label>
                        <input asp-for="SoLuong" class="form-control" type="number" min="0" placeholder="0" />
                        <span asp-validation-for="SoLuong" class="text-danger small"></span>
                    </div>

                    <!-- Danh mục liên quan -->
                    <div class="col-12 mt-4">
                        <h5 class="text-primary mb-3 border-bottom pb-2">
                            <i class="fas fa-tags me-2"></i>Danh mục liên quan
                        </h5>
                    </div>

                    <!-- Chủ đề -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Chủ đề</label>
                        <select asp-for="MaChuDe" class="form-select">
                            <option value="">-- Chọn Chủ đề --</option>
                            @if (ViewBag.ChuDes != null)
                            {
                                foreach (var item in ViewBag.ChuDes)
                                {
                                    <option value="@item.MaChuDe" selected="@(item.MaChuDe == Model.MaChuDe ? "selected" : null)">@item.TenChuDe</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="MaChuDe" class="text-danger small"></span>
                    </div>

                    <!-- Tác giả -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Tác giả</label>
                        <select asp-for="MaTacGia" class="form-select">
                            <option value="">-- Chọn Tác giả --</option>
                            @if (ViewBag.TacGias != null)
                            {
                                foreach (var item in ViewBag.TacGias)
                                {
                                    <option value="@item.MaTacGia" selected="@(item.MaTacGia == Model.MaTacGia ? "selected" : null)">@item.TenTG</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="MaTacGia" class="text-danger small"></span>
                    </div>

                    <!-- Nhà xuất bản -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Nhà xuất bản</label>
                        <select asp-for="MaNhaXuatBan" class="form-select">
                            <option value="">-- Chọn NXB --</option>
                            @if (ViewBag.NhaXuatBans != null)
                            {
                                foreach (var item in ViewBag.NhaXuatBans)
                                {
                                    <option value="@item.MaNhaXuatBan" selected="@(item.MaNhaXuatBan == Model.MaNhaXuatBan ? "selected" : null)">@item.TenNXB</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="MaNhaXuatBan" class="text-danger small"></span>
                    </div>

                    <!-- Thông tin bổ sung -->
                    <div class="col-12 mt-4">
                        <h5 class="text-primary mb-3 border-bottom pb-2">
                            <i class="fas fa-file-alt me-2"></i>Thông tin bổ sung
                        </h5>
                    </div>

                    <!-- Nhà cung cấp -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Nhà cung cấp</label>
                        <input asp-for="NhaCungCap" class="form-control" placeholder="Nhập nhà cung cấp..." />
                    </div>

                    <!-- Mô tả -->
                    <div class="col-12">
                        <label class="form-label fw-semibold">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="5" placeholder="Nhập mô tả chi tiết về sách..."></textarea>
                    </div>

                    <!-- Ảnh bìa -->
                    <div class="col-12 mt-4">
                        <h5 class="text-primary mb-3 border-bottom pb-2">
                            <i class="fas fa-image me-2"></i>Hình ảnh
                        </h5>

                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Ảnh bìa</label>
                                <input class="form-control" type="file" name="fileAnhBia" id="fileAnhBia" accept="image/*" />
                                <div class="form-text">Chọn ảnh mới để thay thế ảnh hiện tại</div>
                            </div>

                            <div class="col-md-6">
                                <div class="border rounded p-3 text-center bg-light">
                                    <p class="fw-semibold mb-2">Xem trước ảnh</p>
                                    <img id="previewImg" src="~/uploads/@Model.AnhBiaChinh" alt="Ảnh bìa sách"
                                         class="img-fluid rounded shadow-sm" style="max-height: 200px; max-width: 100%;"
                                         onerror="this.src='https://via.placeholder.com/200x250?text=No+Image'" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Nút hành động -->
                <div class="row mt-5">
                    <div class="col-12">
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("QuanLySach")" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-times me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save me-2"></i>Cập nhật sách
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('fileAnhBia');
            const preview = document.getElementById('previewImg');

            // Xử lý thay đổi ảnh
            fileInput.addEventListener('change', function() {
                const file = this.files[0];
                if (file) {
                    if (file.size > 5 * 1024 * 1024) {
                        alert('Kích thước ảnh không được vượt quá 5MB');
                        this.value = '';
                        return;
                    }

                    if (!file.type.startsWith('image/')) {
                        alert('Vui lòng chọn file ảnh');
                        this.value = '';
                        return;
                    }

                    preview.src = URL.createObjectURL(file);
                }
            });

            // Xử lý form submit
            document.getElementById('formSuaSach').addEventListener('submit', function(e) {
                const tenSach = document.querySelector('[name="TenSach"]').value.trim();
                const giaBan = document.querySelector('[name="GiaBan"]').value;
                const soLuong = document.querySelector('[name="SoLuong"]').value;

                if (!tenSach) {
                    e.preventDefault();
                    alert('Vui lòng nhập tên sách');
                    return;
                }

                if (!giaBan || giaBan <= 0) {
                    e.preventDefault();
                    alert('Vui lòng nhập giá bán hợp lệ');
                    return;
                }

                if (!soLuong || soLuong < 0) {
                    e.preventDefault();
                    alert('Vui lòng nhập số lượng hợp lệ');
                    return;
                }
            });
        });
    </script>
}