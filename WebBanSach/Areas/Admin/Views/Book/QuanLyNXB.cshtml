@model IEnumerable<Media.Models.NhaXuatBan>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý Nhà Xuất Bản";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<style>
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
        border-bottom: 2px solid #dee2e6;
    }

    .action-buttons .btn {
        border-radius: 6px;
        padding: 4px 8px;
        font-size: 0.8rem;
    }

    .stats-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 12px;
    }
</style>

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 fw-bold text-primary mb-1">
                        <i class="fas fa-building me-2"></i>Quản lý Nhà Xuất Bản
                    </h1>
                    <p class="text-muted mb-0">Quản lý thông tin các nhà xuất bản trong hệ thống</p>
                </div>
                <div>
                    
                    <a href="@Url.Action("ThemNXB", "Book")" class="btn btn-success">
                        <i class="fas fa-plus-circle me-2"></i>Thêm NXB
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h6 class="text-white-50 mb-1">Tổng số NXB</h6>
                            <h3 class="text-white mb-0">@Model.Count()</h3>
                        </div>
                        <div class="col-4 text-end">
                            <i class="fas fa-building fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h6 class="text-muted mb-1">Đang hoạt động</h6>
                            <h3 class="text-dark mb-0">@Model.Count()</h3>
                        </div>
                        <div class="col-4 text-end">
                            <i class="fas fa-check-circle fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h6 class="text-muted mb-1">Sách từ NXB</h6>
                            <h3 class="text-dark mb-0">@ViewBag.TongSach</h3>
                        </div>
                        <div class="col-4 text-end">
                            <i class="fas fa-book fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h6 class="text-muted mb-1">Cập nhật gần nhất</h6>
                            <h3 class="text-dark mb-0">Hôm nay</h3>
                        </div>
                        <div class="col-4 text-end">
                            <i class="fas fa-sync fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bảng danh sách NXB -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-white py-3 border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-dark">
                    <i class="fas fa-list me-2 text-primary"></i>Danh sách Nhà Xuất Bản
                </h5>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Mã NXB</th>
                            <th>Tên Nhà Xuất Bản</th>
                            <th class="text-center pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var nxb in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">@nxb.MaNhaXuatBan</td>
                                    <td>
                                        <div class="fw-bold text-dark">@nxb.TenNXB</div>
                                    </td>
                                    <td class="text-center pe-4 action-buttons">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-outline-primary btn-sm"
                                               href="@Url.Action("SuaNXB", "Book", new { id = nxb.MaNhaXuatBan })"
                                               data-bs-toggle="tooltip"
                                               title="Sửa thông tin">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a class="btn btn-outline-danger btn-sm"
                                               href="@Url.Action("XoaNXB", "Book", new { id = nxb.MaNhaXuatBan })"
                                               onclick="return confirm('Bạn có chắc muốn xóa nhà xuất bản \" @nxb.TenNXB\"?');"
                                               data-bs-toggle="tooltip"
                                               title="Xóa NXB">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="fas fa-building fa-3x mb-3"></i>
                                        <h5>Chưa có nhà xuất bản nào</h5>
                                        <p class="mb-0">Hãy thêm nhà xuất bản mới để bắt đầu quản lý</p>
                                        <a href="@Url.Action("ThemNXB", "Book")" class="btn btn-primary mt-3">
                                            <i class="fas fa-plus me-2"></i>Thêm NXB đầu tiên
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Footer thông tin -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="text-center text-muted">
                <small>
                    <i class="fas fa-info-circle me-1"></i>
                    Hiển thị @Model.Count() nhà xuất bản •
                    Cập nhật lúc: @DateTime.Now.ToString("HH:mm dd/MM/yyyy")
                </small>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Khởi tạo tooltip
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    });
</script>