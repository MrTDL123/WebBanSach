@model Media.Models.NhaXuatBan
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Xóa Nhà Xuất Bản";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-trash me-2"></i>
                        <h4 class="mb-0">Xóa Nhà Xuất Bản</h4>
                    </div>
                </div>

                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-warning fs-1 mb-3"></i>
                        <h5 class="text-danger">Bạn có chắc chắn muốn xóa?</h5>
                    </div>

                    <div class="mb-4 p-3 bg-light rounded">
                        <h6 class="fw-bold">@Model.TenNXB</h6>
                        <small class="text-muted">Mã NXB: @Model.TenNXB</small>
                    </div>

                    <form asp-action="XoaNXB" method="post">
                        <input type="hidden" asp-for="MaNhaXuatBan" />

                        <div class="d-flex justify-content-center gap-2">
                            <a href="@Url.Action("QuanLyNXB", "Book")" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>