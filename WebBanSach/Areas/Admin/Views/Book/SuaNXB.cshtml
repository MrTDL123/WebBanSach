@model Media.Models.NhaXuatBan
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sửa Nhà Xuất Bản";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    .card {
        border: none;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

    .card-header {
        background: #007bff;
        color: white;
        border-radius: 10px 10px 0 0 !important;
        padding: 1.25rem;
    }

    .form-control {
        border-radius: 6px;
        padding: 10px 12px;
        border: 1px solid #ddd;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }

    .btn {
        border-radius: 6px;
        padding: 8px 20px;
        font-weight: 500;
    }

    .text-section {
        color: #007bff;
        font-weight: 600;
        border-bottom: 2px solid #007bff;
        padding-bottom: 8px;
    }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-edit me-2"></i>
                        <h4 class="mb-0">Sửa Thông Tin Nhà Xuất Bản</h4>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="SuaNXB" method="post" id="formSuaNXB">
                        <input type="hidden" asp-for="MaNhaXuatBan" />

                        <div class="mb-4">
                            <h5 class="text-section mb-3">
                                <i class="fas fa-info-circle me-2"></i>Thông tin Nhà Xuất Bản
                            </h5>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Tên Nhà Xuất Bản <span class="text-danger">*</span></label>
                            <input asp-for="TenNXB" class="form-control" placeholder="Nhập tên nhà xuất bản" />
                            <span asp-validation-for="TenNXB" class="text-danger small mt-1"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="@Url.Action("QuanLyNXB", "Book")" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('formSuaNXB');
            const input = document.querySelector('[name="TenNXB"]');

            form.addEventListener('submit', function(e) {
                const tenNXB = input.value.trim();

                if (!tenNXB) {
                    e.preventDefault();
                    input.style.borderColor = '#dc3545';
                    input.focus();

                    // Hiển thị thông báo lỗi
                    const errorDiv = document.createElement('div');
                    errorDiv.className = 'alert alert-danger alert-dismissible fade show mt-3';
                    errorDiv.innerHTML = `
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Vui lòng nhập tên nhà xuất bản
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;
                    form.prepend(errorDiv);
                    return;
                }
            });
        });
    </script>
}