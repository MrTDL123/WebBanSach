@model Media.Models.TacGia
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sửa Tác giả";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-edit me-1"></i>Sửa Thông Tin Tác giả
                    </h6>
                </div>
                <div class="card-body">
                    <!-- Hiển thị thông báo -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Success"]
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <!-- Form sửa - ĐÃ THÊM ANTI-FORGERY TOKEN -->
                    <form method="post" asp-action="SuaTacGia" asp-controller="Book" asp-area="Admin" id="editForm">
                        @Html.AntiForgeryToken() <!-- QUAN TRỌNG: THÊM DÒNG NÀY -->
                        <input type="hidden" asp-for="MaTacGia" />

                        <div class="mb-3">
                            <label asp-for="TenTG" class="form-label fw-bold">Tên tác giả *</label>
                            <input asp-for="TenTG" class="form-control" id="TenTG" />
                            <span asp-validation-for="TenTG" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="QuocTich" class="form-label fw-bold">Quốc tịch</label>
                            <input asp-for="QuocTich" class="form-control" id="QuocTich" />
                            <span asp-validation-for="QuocTich" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TieuSu" class="form-label fw-bold">Tiểu sử</label>
                            <textarea asp-for="TieuSu" class="form-control" rows="4" id="TieuSu"></textarea>
                            <span asp-validation-for="TieuSu" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="fas fa-save me-2"></i>Cập nhật
                            </button>
                            <a href="@Url.Action("QuanLyTacGia", "Book", new { area = "Admin" })" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="button" onclick="testSubmit()" class="btn btn-info">
                                <i class="fas fa-bug me-2"></i>Test Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        console.log("=== 🚨 DEBUG FORM SỬA TÁC GIẢ ===");
        console.log("Model Data:", {
            MaTacGia: @Model.MaTacGia,
            TenTG: "@Html.Raw(Model.TenTG)",
            QuocTich: "@Html.Raw(Model.QuocTich)",
            TieuSu: "@Html.Raw(Model.TieuSu)"
        });

        // Kiểm tra form
        const form = document.getElementById('editForm');
        console.log("Form action:", form.action);
        console.log("Form method:", form.method);

        // Test submit chi tiết
        function testSubmit() {
            console.log("=== 🔥 BẮT ĐẦU TEST SUBMIT ===");

            // Lấy tất cả dữ liệu form
            const formData = new FormData(form);
            const data = {};
            for (let [key, value] of formData.entries()) {
                data[key] = value;
                console.log(`${key}: ${value}`);
            }

            // Kiểm tra validation
            if (!form.checkValidity()) {
                console.log("❌ FORM VALIDATION FAILED");
                form.reportValidity();
                return;
            }

            console.log("✅ FORM VALIDATION PASSED");
            console.log("📤 SUBMITTING FORM...");

            // Submit form
            form.submit();
        }

        // Theo dõi sự kiện submit
        form.addEventListener('submit', function(e) {
            console.log("=== 📝 FORM SUBMIT EVENT ===");
            console.log("Form is submitting...");

            // KHÔNG ngăn sự kiện mặc định
            // e.preventDefault(); // ĐẢM BẢO DÒNG NÀY BỊ COMMENT HOẶC KHÔNG CÓ
        });

        // Kiểm tra nút submit
        document.getElementById('submitBtn').addEventListener('click', function(e) {
            console.log("🖱️ Submit button clicked");
        });

        // Kiểm tra network requests
        const originalFetch = window.fetch;
        window.fetch = function(...args) {
            console.log("🌐 Fetch request:", args[0]);
            return originalFetch.apply(this, args);
        };

        // Auto-test khi trang load
        setTimeout(() => {
            console.log("=== ✅ TRANG ĐÃ LOAD XONG ===");
            console.log("Sẵn sàng test form...");
        }, 1000);
    </script>
}