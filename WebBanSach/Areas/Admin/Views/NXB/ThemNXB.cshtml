@model Media.Models.NhaXuatBan
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Thêm Nhà Xuất Bản";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    .card {
        border: none;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

    .card-header {
        background: #007bff;
        color: white;
        border-radius: 10px 10px 0 0 !important;
        padding: 1.5rem;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #ddd;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }

    .btn {
        border-radius: 8px;
        padding: 10px 25px;
        font-weight: 500;
    }

    .input-group-text {
        background: #007bff;
        color: white;
        border: 1px solid #007bff;
    }

    .shake {
        animation: shake 0.5s ease-in-out;
    }

    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        75% {
            transform: translateX(5px);
        }
    }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Thêm Nhà Xuất Bản
                    </h4>
                </div>

                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="ThemNXB" method="post" id="formThemNXB">
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Tên Nhà Xuất Bản <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-building"></i>
                                </span>
                                <input asp-for="TenNXB" class="form-control" placeholder="Nhập tên nhà xuất bản" />
                            </div>
                            <span asp-validation-for="TenNXB" class="text-danger small mt-1"></span>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a href="@Url.Action("QuanLyNXB", "NXB")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Thêm NXB
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('formThemNXB');
            const input = document.querySelector('[name="TenNXB"]');

            form.addEventListener('submit', function(e) {
                const tenNXB = input.value.trim();

                if (!tenNXB) {
                    e.preventDefault();
                    input.style.borderColor = '#dc3545';
                    input.classList.add('shake');
                    setTimeout(() => {
                        input.classList.remove('shake');
                    }, 500);

                    showToast('Vui lòng nhập tên nhà xuất bản', 'danger');
                    return;
                }
            });

            function showToast(message, type) {
                const toast = document.createElement('div');
                toast.className = `alert alert-${type} position-fixed top-0 start-50 translate-middle-x mt-3`;
                toast.style.zIndex = '9999';
                toast.innerHTML = `
                    <i class="fas fa-${type === 'danger' ? 'exclamation-triangle' : 'check-circle'} me-2"></i>
                    ${message}
                `;
                document.body.appendChild(toast);

                setTimeout(() => {
                    toast.remove();
                }, 3000);
            }
        });
    </script>
}