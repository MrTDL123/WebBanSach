<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanSach</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/img/web_img/logo.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn-uicons.flaticon.com/uicons-regular-straight/css/uicons-regular-straight.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.4/css/dataTables.dataTables.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <environment include="Development">
        <link rel="stylesheet" href="~/css/main.css" />
        <link rel="stylesheet" href="~/css/khachangdangnhapdangky.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/main.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/khachangdangnhapdangky.min.css" asp-append-version="true" />
    </environment>

    <link rel="stylesheet" href="~/WebBanSach.styles.css" asp-append-version="true" />

    @await RenderSectionAsync("PageStyles", required: false)
</head>

<body>

    <header>
        <div id="top_header" class="co_dinh_header">
            @*Top header left*@
            <!-- Logo và tên -->
            <a asp-area="Customer" asp-controller="Home" asp-action="TrangChu">
                <img id="logo" src="~/img/web_img/logo.png" alt="Logo">
            </a>


            <!-- Form tìm kiếm -->
            <form asp-area="Customer" asp-controller="Home" asp-action="TimKiem" method="get" id="search_box">
                @await Component.InvokeAsync("ChuDeMenu")

                <input type="search" name="keyword" aria-label="Search" value="@ViewBag.SearchKeyword" id="search_bar" placeholder="Bạn muôn tìm gì?" />
                <button type="submit" id="search_button" style="color: #0ce682;"><i class="bi bi-search"></i></button>
            </form>

            <div id="top_header_right">
                <!-- Đăng nhập -->
                <partial name="_LoginPartial" />

                <!-- Giỏ hàng -->
                @await Component.InvokeAsync("GioHang")
            </div>
        </div>

        @RenderSection("SliderMenu", required: false)

    </header>

    <main role="main" class="">
        <partial name="_Notification" />
        @RenderBody()
    </main>

    <div id="backtop_container" class="rounded-circle d-flex justify-content-center align-items-center">
        <div id="backtop" class="rounded-circle d-flex justify-content-center align-items-center">
            <i class="bi bi-caret-up-fill"></i>
        </div>
    </div>


    <footer>
        <div id="logo_footer">
            <img style="padding-top: 1.5rem;" src="~/img/web_img/logo.png" alt="logo" />
            <p style="margin-bottom: unset;" class="montserrat-bold">CỬA HÀNG SÁCH ONLINE TRUYỀN THỐNG</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/2.1.4/js/dataTables.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/yfm2tzcw10n183a3sq1ddo8j7btx6a161wqkyashxwwo4l45/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        $(document).ready(function () {

            // --- XỬ LÝ NÚT BACK TO TOP ---
            // Bắt sự kiện click
            $('#backtop_container').click(function (e) {
                e.preventDefault();
                // Dùng animate của jQuery hoặc window.scrollTo native đều được
                $('html, body').animate({ scrollTop: 0 }, 600, 'swing');
            });

            // --- XỬ LÝ SCROLL (Cả Header và Backtop) ---
            var header = $('.co_dinh_header');
            var backtop = $('#backtop_container');
            var stickyThreshold = 200; // Điểm cuộn để kích hoạt header
            var backtopThreshold = 300; // Điểm cuộn để hiện nút backtop

            $(window).scroll(function () {
                var scrollPos = $(this).scrollTop();

                // 1. Xử lý Header Sticky
                if (scrollPos >= stickyThreshold) {
                    if (!header.hasClass('sticky')) {
                        header.addClass('sticky');
                    }
                } else {
                    if (header.hasClass('sticky')) {
                        header.removeClass('sticky');
                    }
                }

                // 2. Xử lý ẩn/hiện nút Backtop
                if (scrollPos > backtopThreshold) {
                    backtop.addClass('show');
                } else {
                    backtop.removeClass('show');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>